        },
        {
            "LogName": "Cirrus Beach Portrait/Sprite Load",
            "Action": "EditImage",
            "Target": "Portraits/Cirrus, Characters/Cirrus",
            "FromFile": "assets/{{TargetPathOnly}}/Cirrus/Cirrus_beach.png",
            "Update": "OnLocationChange",
            "When": {"LocationName": "IslandSouth, IslandWest, IslandEast, IslandNorth, Beach"}
        },
        {
            "LogName": "Mermaid Pendant Choker",
            "Action": "EditImage",
            "Target": "Portraits/Cirrus",
